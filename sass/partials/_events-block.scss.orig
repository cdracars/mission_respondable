/*
 * Use 1 grid columns for smaller screens.
 * All generic code goes here.
 */
$zen-column-count: 1;

/*
 * Component
 *
 */
.event-link__attention {
  padding: 0;

  a {
    @include font-myriadprocondensed;
    @include background-image(linear-gradient($gradient-green_light, $gradient-green_dark 90%));
    font-size: 35px;
    line-height: 1em;
    color: $attention-gold;
    padding: 8px 0 10px 10px;
    text-transform: uppercase;
    margin-top: 0;
    margin-bottom: 0;
    text-decoration: none;
    display: block;

    &:hover, &:focus {
      border: 2px solid $attention-gold;
      padding: 6px 0 10px 8px;
      margin-bottom: -2px;
    }
  }
}

.event-location {
  @include font-myriadprocondensed_semibold-italic;
}

.event-date {
  float: right;
}

.event-block {
    
  .view-content {
    margin: 0 10px;
  }

  .event-date {
    border: 1px solid $gradient-green_dark;
    height: 48px;
    width: 61px;
    margin: 0 10px 10px 0;

    .event-day {
      @include font-myriadprocondensed_bold;
      font-size: 30px;
      color: $primary_nav;
      line-height: 5px;
      margin-left: 10px;
    }

    .event-month {
      @include font-copperplate;
      font-size: 13px;
      color: $primary_nav;
      line-height: 5px;
      margin-left: 10px;
    }

    .event-year {
      @include font-myriadprocondensed_bold;
      background-color: $gradient-green_dark;
      color: $topbar-link_color;
      display: inline-block;
      margin-left: 29px;
      padding: 0 5px 2px;
      position: relative;
      top: -37px;
      @include rotate(-90deg);
      letter-spacing: 3px;
      line-height: 14px;
      overflow: hidden;
      margin-top: 5px;
    }
  }

  h3 {
    padding: .75em 0px;
